<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DesignLay.LL_B2_Home">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="30dp"
            android:text="Make your own app"
            android:textColor="@color/md_blue_A400"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/md_deep_orange_400"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/e" />

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start from scratch"
            android:textSize="29dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/border" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/md_green_600">

        <ImageView
            android:padding="9dp"
            android:src="@drawable/b"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"
            android:text="Create a blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/md_red_400">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/abc"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <TextView

            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="28dp"
            android:text="Build a lesson plan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/md_yellow_400">

        <ImageView
            android:padding="5dp"
            android:src="@drawable/b"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:textSize="28dp"
            android:layout_weight="1"
            android:text="Promote your buisness"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>