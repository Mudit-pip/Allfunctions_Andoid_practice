<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SQLite.sq11_AdvanceSearch">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

          <EditText
              android:id="@+id/Sq11_txt_Name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:hint="Name "></EditText>

          <EditText
              android:id="@+id/Sq11_txt_Mobile"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:hint=" mobile number"></EditText>


     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

          <EditText
              android:id="@+id/Sq11_txt_ID"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:hint="ID"></EditText>

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:onClick="Sq11_btn_Search"
              android:text="Search"></Button>


     </LinearLayout>

     <ListView
         android:id="@+id/sq11_list"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"></ListView>

</LinearLayout>